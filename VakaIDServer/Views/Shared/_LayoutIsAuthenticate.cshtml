@using IdentityServer4.Extensions
@using Microsoft.AspNetCore.Identity
@using VakaxaIDServer.Models
@inject UserManager<ApplicationUser> UserManager
@{
    var avatar = "assets/avatars/ava.png";
    string fullName = null;
    ApplicationUser user = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        fullName = Context.User?.GetDisplayName();
        user = await UserManager.GetUserAsync(Context.User);
        if (user != null)
        {
            fullName = user.FullName;
            if (user.Avatar != null)
            {
                avatar = user.Avatar;
            }
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0,minimal-ui">
    <meta name="description" content="VakaxaID">
    <meta name="author" content="VakaxaCompany">
    <title>Member</title>

    <link rel="icon" href="assets/icon/favicon.ico" type="image/png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700%7CMontserrat:400,500">
    <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../css/flatpickr.min.css" rel="stylesheet" type="text/css">
    <link href="../css/icons.css" rel="stylesheet" type="text/css">
    <link href="../css/style.css" rel="stylesheet" type="text/css">
    <link href="../lib/font-awesome/css/font-awesome.css" rel="stylesheet">

</head>
<body>

