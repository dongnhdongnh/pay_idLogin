            </li>
            <li class="menu-item">
                <!-- Mobile menu toggle-->
                <a class="navbar-toggle nav-link" id="mobileToggle">
                    <div class="lines">
                        <span></span> <span></span> <span></span>
                    </div>
                </a>
                <!-- End mobile menu toggle-->
            </li>
        </ul>
    </div>
    <!-- end menu-extras -->
    <div class="clearfix"></div>
</div>
<!-- end container -->
</div>
<!-- end topbar-main -->
<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                @{
                   if (string.Equals(ViewBag.Title,"Security"))
                    {
                        <h4 class="page-title"><i class="mdi mdi-security m-r-5"></i>Security</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active">Control your security settings</li>
                        </ol>
                    }else if (string.Equals(ViewBag.Title,"Activities"))
                    {
                        <h4 class="page-title"><i class="ti-bell m-r-5"></i>Activities</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active">You can control your activities</li>
                        </ol>
                    }else if (string.Equals(ViewBag.Title,"Profile"))
                    {
                        <h4 class="page-title"><i class="ti-user m-r-5"></i>Activities</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active">Update your profile information</li>
